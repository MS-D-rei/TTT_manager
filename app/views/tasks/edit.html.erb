<% provide(:button_name, t('view.update_task')) %>

<div class = 'row'>
<div class= 'col-7 task-create-form'>
<%= form_with(model: @task, local: true) do |f| %>
<%= render 'devise/shared/error_messages', resource: f.object %>

<%= f.label :title %>
<%= f.text_field :title, class: 'form-control' %><br>

<%= f.label :description %>
<%= f.text_area :description, class: 'form-control' %>

<%= f.label :priority %>
<%= f.select :priority, Task.priorities.keys.map { |key| [key, key] } %><br>

<%= f.label :deadline %>
<%= f.datetime_select :deadline %><br>

<%= f.label :status %>
<%= f.select :status, Task.statuses.keys.map { |key| [key, key] } %><br>

<%= f.hidden_field :team_id %>
<%= f.hidden_field :topic_id %>

<%= f.submit yield(:button_name), class: 'btn btn-primary', id: 'btn-positive' %>
<% end %>
</div>
</div>