<h3><%= @task.title %></h3>

<%= link_to 'Edit task', edit_task_path(@task), class: 'btn btn-primary' %>

<div class='row'>
  Priority: <%= @task.priority %>
  Deadline: <%= @task.deadline.strftime("%Y-%m-%d") %>
  Status: <%= @task.status %>
</div>

<div class='row'>
<%= @task.description %>
</div>